    "version": "2.0.0",
    "tasks": [
        {
            "type": "bmx",
            "source": "${entryFile}",
            "output": "",
            "make": "makeapp",
            "app": "console",
            "arch": "auto",
            "platform": "auto",
            "threaded": true,
            "debug": false,
            "quick": false,
            "execute": false,
            "verbose": false,
            "problemMatcher": [
                "$blitzmax"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
