{
	"name": "blitzmax",
	"version": "1.1.0",
	"displayName": "BlitzMax Language Basics",
	"description": "Provides snippets, syntax highlighting, bracket matching and folding in BlitzMax files.",
	"repository": {
		"type": "git",
		"url": "https://github.com/Hezkore/vscode-blitzmax-support"
	},
	"license": "MIT",
	"icon": "media/icon.png",
	"publisher": "Hezkore",
	"main": "./out/extension",
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"engines": {
		"vscode": "^1.32.0"
	},
	"keywords": [
		"BlitzMax",
		"BlitzMax NG",
		"bmax",
		"bmx"
	],
	"activationEvents": [
        "onCommand:blitzmax.buildConsole",
		"onCommand:blitzmax.buildGui",
		"onCommand:blitzmax.buildMods",
		"onCommand:blitzmax.buildLib",
		"onCommand:blitzmax.setSourceFile",
		"onCommand:workbench.action.tasks.runTask"
	],
	"contributes": {
		"taskDefinitions": [
			{
				"type": "bmx",
				"properties": {
					"make": {
						"type": "string",
						"description": "Can either be 'console', 'gui', 'mods' or 'lib'.",
						"default": "console"
					}
				}
			}
		],
		"commands": [
			{
				"command": "blitzmax.buildConsole",
				"title": "Build Console application",
				"category": "BlitzMax"
			},
			{
				"command": "blitzmax.buildGui",
				"title": "Build Gui application",
				"category": "BlitzMax"
			},
			{
				"command": "blitzmax.buildMods",
				"title": "Build Module",
				"category": "BlitzMax"
			},
			{
				"command": "blitzmax.buildLib",
				"title": "Build Shared library",
				"category": "BlitzMax"
			},
			{
				"command": "blitzmax.setSourceFile",
				"title": "Set current document as workspace source file",
				"category": "BlitzMax"
			}
		],
		"languages": [
			{
				"id": "blitzmax",
				"extensions": [
					".bmx"
				],
				"aliases": [
					"BlitzMax NG",
					"BlitzMax",
					"bmax"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configurationDefaults": {
			"[blitzmax]": {
				"editor.snippetSuggestions": "top",
				"editor.insertSpaces": false,
				"editor.detectIndentation": false,
				"editor.trimAutoWhitespace": false
			}
		},
		"configuration": {
			"type": "object",
			"title": "BlitzMax",
			"properties": {
				"blitzmax.bmxPath": {
					"type": "string",
					"default": "",
					"description": "Path to BlitzMax. (e.g: C:\\Program Files (x86)\\BlitzMax)"
				},
				"blitzmax.sourceFile": {
					"type": "string",
					"default": "",
					"description": "The main source file. (change in your workspace settings)"
				},
				"blitzmax.buildOut": {
					"type": "string",
					"default": "",
					"description": "Specifies the output file."
				},
				"blitzmax.debug": {
					"type": "boolean",
					"default": true,
					"description": "Set to false for release build. (change in your workspace settings)"
				},
				"blitzmax.threaded": {
					"type": "boolean",
					"default": true,
					"description": "Builds multithreaded version. (change in your workspace settings)"
				},
				"blitzmax.warn": {
					"type": "boolean",
					"default": true,
					"description": "Warns about function argument casting issues rather than error. (NG only)"
				},
				"blitzmax.execute": {
					"type": "boolean",
					"default": true,
					"description": "Execute built application."
				},
				"blitzmax.autoSetSourceFile": {
					"type": "boolean",
					"default": false,
					"description": "Set the current active document as source file if no source file is specified."
				}
			}
		},
		"grammars": [
			{
				"language": "blitzmax",
				"scopeName": "source.bmx",
				"path": "./syntaxes/blitzmax.json"
			}
		],
		"snippets": [
			{
				"language": "blitzmax",
				"path": "./snippets/blitzmax.json"
			}
		],
		"problemMatchers": [
			{
				"name": "blitzmax",
				"owner": "blitzmax",
				"fileLocation": "absolute",
				"pattern": [
					{
						"regexp": "Compile (Error|Warning)?: (.*)",
						"message": 2,
						"severity": 1
					},
					{
						"regexp": "^\\[(.*.bmx);(\\d+);(\\d+)]",
						"file": 1,
						"line": 2,
						"column": 3
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/node": "^8.0.0",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1",
		"@types/vscode": "^1.32.0"
	}
}