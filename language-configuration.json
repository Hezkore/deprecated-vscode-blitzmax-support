{
	"comments" : {
		"lineComment" : "'"
	},
	"brackets" : [
		[ "{", "}" ],
		[ "[", "]" ],
		[ "(", ")" ],
		[ "<", ">" ]
	],
	"autoClosingPairs" : [
		[ "{", "}" ],
		[ "[", "]" ],
		[ "(", ")" ],
		[ "\"", "\"" ]
	],
	"surroundingPairs" : [
		[ "{", "}" ],
		[ "[", "]" ],
		[ "(", ")" ],
		[ "\"", "\"" ]
	],
	"indentationRules" : {
		"increaseIndentPattern" :  {
			"pattern": "^\\s*(if +?(.*(then\\s*?)$|(?!.+?then).*)|function|method|type|struct|enum|for|case|else|else *?if|while|repeat|select|case)",
			"flags": "i"
		},
		"decreaseIndentPattern" : {
			"pattern": "^\\s*(end *?function|end *?method|else|else *?if|end *?type|case|end *?struct|end *?enum|next|end *?if|wend|until|end *?select)",
			"flags": "i"
		}
	}
}
