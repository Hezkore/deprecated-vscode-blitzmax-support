{
	"version" : "2.0.0",
	
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": false,
		"clear": true
	},
	
    "inputs": [
        {
            "type": "pickString",
            "id": "appType",
            "description": "What type of app do you want to create?",
            "options": ["console", "gui"],
            "default": "console"
        },
        {
            "type": "pickString",
            "id": "appDebug",
			"description": "Build debug or release version?",
			"options": ["d", "r"],
            "default": "d"
        }
    ],
	
	"tasks" : [
		{
			"label": "BlitzMax Run Last Build",
			"type": "shell",
			"command": "..\\build\\client",
			"group": "test"
		},
		{
			"label": "BlitzMax Custom Build",
			"type": "shell",
			"command": "bmk",
			"args": [
				"makeapp",
				"-a",
				"-w",
				"-${input:appDebug}",
				"-t",
				"${input:appType}",
				"-o",
				"../build/client",
				"main.bmx",
				"&&",
				"echo",
				"Build Finished"
			],
			"problemMatcher": "$blitzmax",
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem"
			}
		},
		{
			"label": "BlitzMax Quick Debug Run",
			"type": "shell",
			"command": "bmk",
			"args": [
				"makeapp",
				"-quick",
				"-x",
				"-w",
				"-d",
				"-t",
				"console",
				"-o",
				"../build/client",
				"main.bmx"
			],
			"problemMatcher": "$blitzmax",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"revealProblems": "onProblem"
			}
		}
	]
}
